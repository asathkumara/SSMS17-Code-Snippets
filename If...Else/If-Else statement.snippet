<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
<_locDefinition xmlns="urn:locstudio">
    <_locDefault _loc="locNone" />
    <_locTag _loc="locData">Title</_locTag>
    <_locTag _loc="locData">Description</_locTag>
    <_locTag _loc="locData">Author</_locTag>
    <_locTag _loc="locData">ToolTip</_locTag>
   <_locTag _loc="locData">Default</_locTag>
</_locDefinition>
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>If-Else Statement</Title>
                        <Shortcut></Shortcut>
			<Description>Code Snippet for an If-Else statement.</Description>
			<Author>Asel Sathkumara</Author>
			<SnippetTypes>
                                <SnippetType>SurroundsWith</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
                                <Literal>
                                	<ID>boolean_expression</ID>
                                	<ToolTip>Provide the boolean expression you wish to evaluate.</ToolTip>
                                	<Default>boolean_expression</Default>
                                </Literal>
								<Literal>
                                	<ID>sql_statement</ID>
                                	<ToolTip>Enter your SQL statement(s) here.</ToolTip>
                                	<Default>[...]</Default>
                                </Literal>
								
								

			</Declarations>
			<Code Language="SQL"><![CDATA[
IF ($boolean_expression$)
BEGIN
	$selected$
END
ELSE
BEGIN
    $sql_statement$
END
			]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
